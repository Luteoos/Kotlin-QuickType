<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent"
android:background="@color/colorPrimary">

    <TextView
            android:text="Hall of Fame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvTopScoresTitle" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:textSize="20sp"
            android:textColor="@color/colorAccent" android:textStyle="bold|italic"/>
    <android.support.v7.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@id/btnHome2"
            app:layout_constraintTop_toBottomOf="@+id/tvTopScoresTitle" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:id="@+id/rvTopScores" android:layout_marginTop="8dp"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnHome2" android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="3dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:background="@drawable/rounded_drawable"
            android:text="Home" android:textSize="14sp" android:textStyle="bold"
            android:drawableStart="@drawable/ic_baseline_home_24px" android:padding="4dp"
            android:textColor="@color/colorPrimaryDark"/>
</android.support.constraint.ConstraintLayout>