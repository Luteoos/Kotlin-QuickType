<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:cardCornerRadius="4dp" app:cardBackgroundColor="@color/colorPrimaryDark"
            android:id="@+id/cardView3" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintBottom_toTopOf="@+id/cardView2"
            android:layout_margin="16dp" app:contentPadding="6dp">
        <TextView
                android:text="@string/text_help"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView2"
                android:textColor="@color/colorPrimaryLight" android:textAlignment="center"/>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/cardView2" app:cardCornerRadius="4dp" app:cardBackgroundColor="@color/colorPrimaryDark"
            app:layout_constraintTop_toBottomOf="@+id/cardView3" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintBottom_toTopOf="@+id/btnHome2" android:layout_margin="16dp" app:contentPadding="6dp">
        <TextView
                android:text="@string/text_about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView"
                android:textColor="@color/colorPrimaryLight" android:textAlignment="center"/>
    </android.support.v7.widget.CardView>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnHome2" android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="3dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:background="@drawable/rounded_drawable"
            android:text="Home" android:textSize="14sp" android:textStyle="bold"
            android:drawableStart="@drawable/ic_baseline_home_24px" android:padding="4dp"
            android:textColor="@color/colorPrimaryDark"/>
</android.support.constraint.ConstraintLayout>